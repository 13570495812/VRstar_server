<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="0dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="960px"
        android:layout_height="1555px"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:background="@color/alinB"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_xx"
            android:layout_width="71px"
            android:layout_height="71px"
            android:layout_marginLeft="353px"
            android:src="@drawable/xx"
            android:layout_marginTop="80px"
            android:onClick="onButtonClickDialogHide"
            android:translationZ="1dp"></ImageView>

        <VideoView
            android:id="@+id/vvmovie"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginTop="-100px"
           ></VideoView>


        <ImageView
            android:id="@+id/Detail_chart"
            android:layout_width="match_parent"
            android:layout_marginTop="-100px"
            android:layout_height="match_parent"></ImageView>

        <TextView
            android:id="@+id/dialog_opne"
            android:layout_width="324px"
            android:layout_height="82px"
            android:lineHeight="82px"
            android:layout_marginLeft="193px"
            android:layout_marginBottom="200px"
            android:background="@drawable/button"
            android:text="OPEN GAME"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="54px"
            android:layout_marginTop="-120dp"
            android:onClick="onButtonClickOpenGames"
            android:translationZ="1dp"></TextView>
    </LinearLayout>
</RelativeLayout>